<article class="post">
  <header>
    <h1><%= @post.title %></h1>
    <span class="date"><%= @post.published_at.strftime("%e %B %Y") %></span>
  </header>

  <section class="content">
    <%= raw RDiscount.new(@post.body).to_html %>
  </section>


  <section class="comments">
      <div id="disqus_thread"></div>
      <script type="text/javascript" src="http://disqus.com/forums/hyperbolicmotion/embed.js"> </script>
      <noscript><a href="http://hyperbolicmotion.disqus.com/?url=ref">View the discussion thread.</a></noscript>
      <a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span class="logo-disqus">Disqus</span></a>
  </section>
</article>
